<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FXMLController">
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
   <children>
      <VBox layoutX="5.0" layoutY="5.0" prefHeight="600.0" prefWidth="600.0">
         <children>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="500.0" spacing="20.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="40.0" prefWidth="240.0" spacing="10.0">
                     <children>
                        <TextField fx:id="fileName" alignment="CENTER" prefHeight="30.0" prefWidth="140.0">
                           <font>
                              <Font name="Calibri" size="15.0" />
                           </font>
                        </TextField>
                        <Button fx:id="newFile" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleNewFileButtonAction" prefHeight="30.0" prefWidth="90.0" text="New File" textAlignment="CENTER">
                           <font>
                              <Font name="Calibri Light" size="15.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <Button fx:id="open" alignment="CENTER" mnemonicParsing="false" onAction="#handleOpenButtonAction" prefHeight="30.0" prefWidth="90.0" text="Open" textAlignment="CENTER">
                     <font>
                        <Font name="Calibri Light" size="15.0" />
                     </font></Button>
                  <Button fx:id="save" alignment="CENTER" mnemonicParsing="false" onAction="#handleSaveButtonAction" prefHeight="30.0" prefWidth="90.0" text="Save" textAlignment="CENTER">
                     <font>
                        <Font name="Calibri Light" size="15.0" />
                     </font></Button>
               </children>
            </HBox>
            <TextArea fx:id="textArea" prefHeight="520.0" prefWidth="600.0">
               <font>
                  <Font name="Calibri Light" size="15.0" />
               </font></TextArea>
         </children>
      </VBox>
   </children>
</AnchorPane>
