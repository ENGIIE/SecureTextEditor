<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.SepiaTone?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FXMLController">
   <padding>
      <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
   </padding>
   <children>
      <VBox alignment="CENTER" layoutX="-2.0" layoutY="-2.0" prefHeight="508.0" prefWidth="509.0" spacing="10.0">
         <padding>
            <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
         </padding>
         <children>
            <Text text="Welcome" textAlignment="CENTER">
               <font>
                  <Font name="Calibri" size="42.0" />
               </font>
               <effect>
                  <SepiaTone />
               </effect></Text>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <TextField fx:id="fileName" prefHeight="30.0" prefWidth="140.0">
                     <font>
                        <Font size="15.0" />
                     </font></TextField>
                  <Button fx:id="newFile" mnemonicParsing="false" onAction="#handleNewFileButtonAction" prefHeight="30.0" prefWidth="90.0" text="New File">
                     <font>
                        <Font name="Calibri Light" size="15.0" />
                     </font></Button>
               </children>
            </HBox>
            <Button fx:id="open" mnemonicParsing="false" onAction="#handleOpenButtonAction" prefHeight="30.0" prefWidth="240.0" text="Open File">
               <font>
                  <Font name="Calibri Light" size="15.0" />
               </font></Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
